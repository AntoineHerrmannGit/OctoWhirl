<Window x:Class="OctoWhirl.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OctoWhirl" Height="800" Width="1200" 
        ResizeMode="CanResize" AllowDrop="True"
        Background="{StaticResource MainWindowDarkThemeBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="{StaticResource MainWindowMenuPannelDarkThemeBrush}" VerticalAlignment="Stretch">
            <!-- Logo -->
            <Image Source="pack://application:,,,/Ressources/Images/OctoWhirl.Logo.png" Margin="10,10,10,10"/>
            
            <!-- Séparateur discret -->
            <Border Height="1" Margin="10,0,10,10" Background="#40FFFFFF"/>

            <!-- Navigation Icons -->
            <StackPanel Margin="5" VerticalAlignment="Top" Cursor="" >
                <Button Style="{StaticResource NavButtonStyle}" 
                        Margin="0,0,0,10"
                        Content="Home" 
                        Tag="/Ressources/Images/home.png" 
                        Click="NavButton_Click"/>

                <Button Style="{StaticResource NavButtonStyle}" 
                        Margin="0,0,0,10"
                        Content="Trading" 
                        Tag="/Ressources/Images/market.png" 
                        Click="NavButton_Click"/>

                <Button Style="{StaticResource NavButtonStyle}" 
                        Margin="0,0,0,10"
                        Content="Risk Analysis" 
                        Tag="/Ressources/Images/risk.png" 
                        Click="NavButton_Click"/>
                
                <Button Style="{StaticResource NavButtonStyle}" 
                        Margin="0,0,0,10"
                        Content="Market" 
                        Tag="/Ressources/Images/market.png" 
                        Click="NavButton_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <ContentControl Grid.Column="1" x:Name="MainContent"/>

    </Grid>
</Window>