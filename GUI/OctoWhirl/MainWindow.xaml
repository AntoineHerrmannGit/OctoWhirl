<Window x:Class="OctoWhirl.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OctoWhirl" Height="800" Width="1200" 
        ResizeMode="CanResize" AllowDrop="True"
        Background="{StaticResource MainWindowDarkThemeBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#2B2B3C" VerticalAlignment="Stretch">
            <!-- Logo -->
            <Image Source="Ressources/Images/OctoWhirl.Logo.png" Height="80" Margin="10"/>
            <!-- Navigation Icons -->
            <StackPanel Margin="20" VerticalAlignment="Top" >
                <Button Style="{StaticResource NavButtonStyle}" Content="Home" Tag="Ressources/Images/DarkTheme/home.png" Click="NavButton_Click"/>
            </StackPanel>
        </StackPanel>

        <ContentControl Grid.Column="1" x:Name="MainContent"/>

    </Grid>
</Window>