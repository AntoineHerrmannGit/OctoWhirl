<UserControl x:Class="OctoWhirl.GUI.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OctoWhirl.GUI.Views"
             xmlns:localContext="clr-namespace:OctoWhirl.GUI.ViewModels"
             xmlns:localCustomStyles="clr-namespace:OctoWhirl.GUI.Ressources.Styles.Custom"
             mc:Ignorable="d" >
    <UserControl.DataContext>
        <localContext:WelcomeViewModel/>
    </UserControl.DataContext>

    <!-- Main Content -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Orientation="Vertical" >

            <!-- Welcome -->
            <TextBlock Text="{Binding WelcomeMessage}" FontSize="28" Foreground="White" FontWeight="Bold"/>

            <!-- Portfolio Summary -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,10">
                <StackPanel Width="300">
                    <TextBlock Text="Portfolio" FontSize="16" Foreground="LightGray"/>
                    <TextBlock Text="$56,431.27" FontSize="24" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="+$1,239.42 (2.45%) Today" Foreground="LightGreen" FontSize="14"/>
                </StackPanel>
                <!-- Performance Chart Placeholder -->
                <Border Background="White" Width="400" Height="150" Margin="40,0,0,0" CornerRadius="8">
                    <TextBlock Text="Chart Here" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- Recent Activity -->
            <TextBlock Text="Recent Activity" FontSize="20" Foreground="White" FontWeight="Bold" Margin="0,20,0,10"/>
            <StackPanel Background="#2B2B3C">
                <!-- Padding="10" CornerRadius="8"> -->
                <TextBlock Text="🟢 Bought TSLA - $5,000.00 - Mar 24, 2024" Foreground="White" Margin="5"/>
                <TextBlock Text="🔴 Sold AAPL - $2,500.00 - Mar 23, 2024" Foreground="White" Margin="5"/>
                <TextBlock Text="⚠️ Dividend Received MSFT - Mar 20, 2024" Foreground="White" Margin="5"/>
            </StackPanel>

            <!-- Cards -->
            <UniformGrid Columns="2" Margin="0,30,0,0" HorizontalAlignment="Stretch">
                <localCustomStyles:CardButton Style="{StaticResource CardButtonStyle}"
                       CardTitle="Trading"
                       CardDescription="Access trading tools and charts"
                       IconSource="/Ressources/Images/trading.png"
                       Click="Card_Click" Cursor="Hand"/>

                <localCustomStyles:CardButton Style="{StaticResource CardButtonStyle}"
                       CardTitle="Risk Analysis"
                       CardDescription="Evaluate portfolio risk"
                       IconSource="/Ressources/Images/risk.png"
                       Click="Card_Click" Cursor="Hand"/>

                <localCustomStyles:CardButton Style="{StaticResource CardButtonStyle}"
                       CardTitle="Market Overview"
                       CardDescription="See global market trends"
                       IconSource="/Ressources/Images/market.png"
                       Click="Card_Click" Cursor="Hand"/>

                <localCustomStyles:CardButton Style="{StaticResource CardButtonStyle}"
                       CardTitle="BackTest"
                       CardDescription="Test your strategies"
                       IconSource="/Ressources/Images/strategy.png"
                       Click="Card_Click" Cursor="Hand"/>

                <localCustomStyles:CardButton Style="{StaticResource CardButtonStyle}"
                       CardTitle="Scripting"
                       CardDescription="Create your own rules"
                       IconSource="/Ressources/Images/scripting.png"
                       Click="Card_Click" Cursor="Hand"/>

                <localCustomStyles:CardButton Style="{StaticResource CardButtonStyle}"
                       CardTitle="Settings"
                       CardDescription="Customize your experience"
                       IconSource="/Ressources/Images/settings.png"
                       Click="Card_Click" Cursor="Hand"/>
            </UniformGrid>

            <!-- Market Ticker -->
            <Border Background="#F16434" CornerRadius="8" Margin="0,30,0,0" Padding="10">
                <TextBlock Text="Market Closed - The stock market is currently closed." Foreground="White" FontWeight="Bold"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
