<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:localCustomStyles="clr-namespace:OctoWhirl.GUI.Ressources.Styles.Custom">
    <!-- Colors -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Colors/DarkThemeColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="CardButtonStyle" TargetType="{x:Type localCustomStyles:CardButton}">
        <Setter Property="Background" Value="{StaticResource CardButtonBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardButtonBorderBrush}"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type localCustomStyles:CardButton}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Width="30" Height="30" Margin="10,0,20,0"
                                   Source="{TemplateBinding IconSource}"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding CardTitle}" FontSize="18" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="{TemplateBinding CardDescription}" Foreground="LightGray"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>