<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Colors/DarkThemeColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Style NavButton avec image toujours visible et texte au survol -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource NavButtonBackGroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NavButtonBackBorderBrush}"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                            <Image Width="70" Height="70" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}}"/>
                            <TextBlock x:Name="textBlock"
                                   Text="{TemplateBinding Content}"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{TemplateBinding Foreground}"
                                   Opacity="0"
                                   RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform X="10"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="textBlock" Property="Opacity" Value="1"/>
                            <Setter TargetName="border" Property="Background" Value="{StaticResource NavButtonBackMouseOverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource NavButtonBackPressedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>