<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:OctoWhirl.GUI.Converters">
    <!-- Colors -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Colors/DarkThemeColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Converter : Fusionner les deux converters en un seul-->
    <conv:PackUriConverter x:Key="PackUriConverter"/>
    <conv:ThemeIconConverter x:Key="ThemeIconConverter"/>

    <!-- Style Definition -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource NavButtonBackGroundColorBrush}"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Width="70" Height="70" Margin="0,0,10,0" 
                                   Source="{Binding RelativeSource={RelativeSource TemplatedParent}, 
                                   Path=Tag, 
                                   Converter={StaticResource PackUriConverter}}"/>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#3A3A4D"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>